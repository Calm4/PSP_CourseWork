<Window x:Class="DirigibleBattle.Windows.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client - Dirigible Battle" Height="200" Width="300">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBox x:Name="ServerIP" Width="200" Height="30" Margin="10" Text="Enter Server IP"/>
        <ListBox x:Name="ClientLog" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <Button Content="Connect to Server" Width="200" Margin="10" Click="ConnectToServer_Click"/>
    </StackPanel>
</Window>
