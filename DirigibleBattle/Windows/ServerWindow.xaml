<Window x:Class="DirigibleBattle.Windows.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server Window" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <!-- IP Display and Controls -->
            <TextBlock x:Name="ServerIPText" Margin="10" FontSize="14"/>
            <Button x:Name="StartServerButton" Content="Start Server" Click="StartServer_Click" Margin="10" />
            <Button x:Name="StartGameButton" Content="Start Game" Click="StartGame_Click" Margin="10" Visibility="Collapsed" />

            <!-- Log Window -->
            <ListBox x:Name="ServerLog" Margin="10" Height="200" />

            <!-- Client List Display -->
            <ListBox x:Name="ClientList" Margin="10" Height="100" />
        </StackPanel>
    </Grid>
</Window>
