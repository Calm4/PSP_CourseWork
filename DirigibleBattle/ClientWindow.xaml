<Window x:Class="DirigibleBattle.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client Settings" Height="200" Width="300">
    <Grid>
        <TextBlock Text="Server IP:" Margin="10,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Name="IpTextBox" Text="127.0.0.1" Margin="80,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150"/>

        <TextBlock Text="Port:" Margin="10,50,10,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Name="PortTextBox" Text="8888" Margin="80,50,10,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150"/>

        <Button Content="Connect" Width="100" Height="30" Margin="100,100,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="ConnectButton_Click"/>
    </Grid>
</Window>
