<Window x:Class="DirigibleBattle.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection Setup" Height="200" Width="300">
    <Grid>
        <Label Content="Select your role:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <Button x:Name="ServerButton" Content="Server" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Margin="50,0,0,0" Click="ServerButton_Click"/>
        <Button x:Name="ClientButton" Content="Client" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Margin="0,0,50,0" Click="ClientButton_Click"/>
        <Button x:Name="GameButton" Content="Game" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Margin="0,50,100,0" Click="GameButton_Click"/>
    </Grid>
</Window>
